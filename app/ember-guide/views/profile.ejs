<!-- views/profile.ejs -->
<!doctype html>
<html>

<!-- head -->
<% include include/head %>

<body>
    <div class="container">

        <div class="page-header text-center">
            <h1><span class="fa fa-anchor"></span> Profile Page</h1>
            <a href="/logout" class="btn btn-default btn-sm">Logout</a>
        </div>

        <div class="row">

            <!-- LOCAL INFORMATION -->
            <div class="col-sm-12">
                <div class="well">
                    <h3><span class="fa fa-user"></span> Local</h3>

                    <% if (user.local.email) { %>
                    <p>
                        <strong>id</strong>: <%= user._id %><br>
                        <strong>email</strong>: <%= user.local.email %><br>
                        <strong>password</strong>: <%= user.local.password %>
                    </p>
                    <% } else { %>
                    <a href="/profile/link" class="btn btn-default">Link Local</a>
                    <% } %>

                </div>
            </div>

        </div>

        <div class="row">

            <!-- FACEBOOK INFORMATION -->
            <div class="col-sm-6">
                <div class="well">
                    <h3 class="text-primary"><span class="fa fa-facebook"></span> Facebook</h3>

                    <!-- check if the user has this token (is the user authenticated with this social account) -->
                    <% if (user.facebook.token) { %>
                    <p>
                        <strong>id</strong>: <%= user.facebook.id %><br>
                        <strong>token</strong>: <%= user.facebook.token %><br>
                        <strong>email</strong>: <%= user.facebook.email %><br>
                        <strong>display name</strong>: <%= user.facebook.displayName %><br>
                    </p>

                    <a href="/unlink/facebook" class="btn btn-primary">Unlink</a>
                    <% } else { %>
                    <a href="/link/facebook" class="btn btn-primary">Link Facebook</a>
                    <% } %>

                </div>
            </div>

            <!-- TWITTER INFORMATION -->
            <div class="col-sm-6">
                <div class="well">
                    <h3 class="text-info"><span class="fa fa-twitter"></span> Twitter</h3>

                    <!-- check if the user has this token (is the user authenticated with this social account) -->
                    <% if (user.twitter.token) { %>
                    <p>
                        <strong>id</strong>: <%= user.twitter.id %><br>
                        <strong>token</strong>: <%= user.twitter.token %><br>
                        <strong>display name</strong>: <%= user.twitter.displayName %><br>
                        <strong>username</strong>: <%= user.twitter.username %>
                    </p>

                    <a href="/unlink/twitter" class="btn btn-info">Unlink</a>
                    <% } else { %>
                    <a href="/link/twitter" class="btn btn-info">Link Twitter</a>
                    <% } %>

                </div>
            </div>

        </div>

        <div class="row">

            <!-- GOOGLE INFORMATION -->
            <div class="col-sm-6">
                <div class="well">
                    <h3 class="text-danger"><span class="fa fa-google-plus"></span> Google+</h3>

                    <!-- check if the user has this token (is the user authenticated with this social account) -->
                    <% if (user.google.token) { %>
                    <p>
                        <strong>id</strong>: <%= user.google.id %><br>
                        <strong>token</strong>: <%= user.google.token %><br>
                        <strong>email</strong>: <%= user.google.email %><br>
                        <strong>display name</strong>: <%= user.google.displayName %>
                    </p>

                    <a href="/unlink/google" class="btn btn-danger">Unlink</a>
                    <% } else { %>
                    <a href="/link/google" class="btn btn-danger">Link Google</a>
                    <% } %>

                </div>
            </div>

            <!-- GITHUB INFORMATION -->
            <div class="col-sm-6">
                <div class="well">
                    <h3 class="text-warning"><span class="fa fa-github-plus"></span> Github</h3>

                    <!-- check if the user has this token (is the user authenticated with this account) -->
                    <% if (user.github.token) { %>
                    <p>
                        <strong>id</strong>: <%= user.github.id %><br>
                        <strong>token</strong>: <%= user.github.token %><br>
                        <strong>email</strong>: <%= user.github.email %><br>
                        <strong>display name</strong>: <%= user.github.displayName %>
                    </p>

                    <a href="/unlink/github" class="btn btn-warning">Unlink</a>
                    <% } else { %>
                    <a href="/link/github" class="btn btn-warning">Link Github</a>
                    <% } %>

                </div>
            </div>

        </div>

    </div>
</body>
</html>
